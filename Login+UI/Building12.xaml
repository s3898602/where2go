<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Way2Go.Building12"
             Title="Building12">
    <VerticalStackLayout>
        <Label FontSize="30" 
           Text="Building 12" 
           HorizontalTextAlignment="Center" 
           Margin="10"/>
        <Image Source="images/building12.png>" 
           Margin="5"/>
        <Entry x:Name="B12_Comment" 
           Placeholder="Add a Comment..." 
           TextChanged="B12_Comment_TextChanged" 
           Completed="B12_Comment_Completed" 
           HeightRequest="60" 
           FontSize="18"/>
    </VerticalStackLayout>
</ContentPage>